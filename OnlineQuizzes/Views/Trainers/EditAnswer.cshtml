@model OnlineQuizzes.ViewModels.MCQWithQuestionIDViewModel

@{
    ViewBag.Title = "Edit Answer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Answers</h2>

@using (Html.BeginForm("EditAnswer", "Trainers", new {QuestionID = Model.questionID,  QuizID = Model.quizID }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.MCQAnswers.MCQID)

    <div class="form-group">
        @Html.LabelFor(model => model.MCQAnswers.QuestionID, "QuestionID", htmlAttributes: new { @class = "control-label col-md-2", @style = "display:none" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.MCQAnswers.QuestionID, new { htmlAttributes = new { @class = "form-control", @Value = Model.questionID, @style = "display:none" } })
            @Html.ValidationMessageFor(model => model.MCQAnswers.QuestionID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MCQAnswers.FirstPossibleAnswer, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.MCQAnswers.FirstPossibleAnswer, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MCQAnswers.FirstPossibleAnswer, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MCQAnswers.SecondPossibleAnswer, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.MCQAnswers.SecondPossibleAnswer, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MCQAnswers.SecondPossibleAnswer, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MCQAnswers.ThirdPossibleAnswer, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.MCQAnswers.ThirdPossibleAnswer, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MCQAnswers.ThirdPossibleAnswer, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MCQAnswers.FourthPossibleAnswer, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.MCQAnswers.FourthPossibleAnswer, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MCQAnswers.FourthPossibleAnswer, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MCQAnswers.CorrectAnswer, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.MCQAnswers.CorrectAnswer, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MCQAnswers.CorrectAnswer, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}


