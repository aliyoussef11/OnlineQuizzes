@model OnlineQuizzes.ViewModels.MCQWithQuestionIDViewModel

@{
    ViewBag.Title = "AddMCQAnswers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("AddMCQQuestion", "MCQAnswers", new { QuizID = Model.quizID }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>MCQ Answers</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
     @Html.LabelFor(model => model.MCQAnswers.QuestionID, htmlAttributes: new { @class = "control-label col-md-2" , @style = "display:none" })
        <div class="col-md-10">
        @Html.EditorFor(model => model.MCQAnswers.QuestionID, new
        { htmlAttributes = new { @class = "form-control", @Value = Model.questionID, @style = "display:none" } })
        @Html.ValidationMessageFor(model => model.MCQAnswers.QuestionID, "", new { @class = "text-danger" })
    </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MCQAnswers.FirstPossibleAnswer, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.MCQAnswers.FirstPossibleAnswer, new
            { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MCQAnswers.FirstPossibleAnswer, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MCQAnswers.SecondPossibleAnswer, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.MCQAnswers.SecondPossibleAnswer, new
            { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MCQAnswers.SecondPossibleAnswer, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MCQAnswers.ThirdPossibleAnswer, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.MCQAnswers.ThirdPossibleAnswer, new
            { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MCQAnswers.ThirdPossibleAnswer, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MCQAnswers.FourthPossibleAnswer, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.MCQAnswers.FourthPossibleAnswer, new
            { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MCQAnswers.FourthPossibleAnswer, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MCQAnswers.CorrectAnswer, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.MCQAnswers.CorrectAnswer, new
            { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MCQAnswers.CorrectAnswer, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}